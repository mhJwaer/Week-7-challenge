<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|end"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginNormal"
        android:drawablePadding="@dimen/paddingSmall"
        android:drawableTint="@color/teal_200"
        android:text="@string/week_7_challenge"
        android:textSize="@dimen/textLarge"
        app:drawableStartCompat="@drawable/ic_android" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="225dp"
        android:layout_margin="@dimen/marginNormal"
        android:src="@drawable/first_image_layerlist" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="160dp"
        android:layout_height="225dp"
        android:layout_margin="16dp"
        android:src="@drawable/burger"
        app:shapeAppearanceOverlay="@style/water_drop_style"
        />

</LinearLayout>